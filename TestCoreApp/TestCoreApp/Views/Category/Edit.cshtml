@model Category
@{
    ViewData["Title"] = "الفئات | تعديل فئة";
}

<div class="container-fluid mt-3">
    <div class="align-content-center">
        <div class="row">
            <div class="col-md-6">
                <h1 style="font-size:24px"><a asp-controller="Home" asp-action="index">الرئيسية</a> / الفئات</h1>
            </div>
            <hr />
        </div>

        <h2 style="font-size:20px;font-weight:bold">تعديل الفئة</h2>



        <form action="" method="post">
            @* show all custom errors *@
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="mb-3">

                <label asp-for="Cat_Name">إسم الفئة</label>
                <input type="text" asp-for="Cat_Name" class="form-control" name="Cat_Name" />
                <span asp-validation-for="Cat_Name" class="text-danger"></span> @* show error bellow the input field *@

            </div>

            <button type="submit" class="btn btn-success" style="width : 150px"><i class="bi bi-save"></i>&nbsp;تعديل</button>
            <a asp-controller="Category" asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-bar-right"></i>&nbsp;رجـوع</a>
        </form>


    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}