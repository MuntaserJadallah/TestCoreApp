@{
    ViewData["Title"] = "الفئات | الرئيسية";
}

@* Call List From Controll *@
@model IEnumerable<Category> 

<div class="container-fluid mt-3">
    <div class="align-content-center">
        <div class="row">

                <div class="col-md-6">
                    <h1 style="font-size:24px"><a asp-controller="Home" asp-action="index">الرئيسية</a> / الفئات</h1>
                </div>

                <div class="col-md-6 text-end">
                <a asp-controller="Category" asp-action="New" class="btn btn-primary btn-sm">
                    <i class="bi bi-file-plus"></i>&nbsp;إضافة فئة
                    </a>
                </div>
            <hr />
            <div class="col-md-12">
                <h2 style="font-size:20px;font-weight:bold">قائمة الفئات</h2>
                <table class="table table-striped table" style="width:100%">
                    <thead>
                        <tr>
                            <th class="bg-dark text-white">رقم الفئة</th>
                            <th class="bg-dark text-white">إسم الفئة</th>
                            <th class="bg-dark text-white">تاريخ الإنشـاء</th>
                            <th class="bg-dark text-white">التحكم</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var category in Model)
                        {
                            <tr>
                                <td>@category.Id</td> @* View Column of data *@
                                <td>@category.Cat_Name</td>
                                <td>@category.CreatedDate</td>
                                <td>
                                    <a asp-controller="Category" asp-action="Edit" asp-route-Id="@category.Id" class="btn btn-primary btn-sm">
                                        <i class="bi bi-pencil-square"></i>&nbsp;
                                    </a>
                                    <a asp-controller="Category" asp-action="Delete" asp-route-Id="@category.Id" class="btn btn-danger btn-sm">
                                        <i class="bi bi-trash3"></i>&nbsp;
                                    </a>
                                </td>
                            </tr>
                        }

                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>


