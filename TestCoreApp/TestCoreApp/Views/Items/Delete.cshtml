@model Item
@{
    ViewData["Title"] = "الأصناف | حذف الصنف";
}
<div class="container-fluid mt-3">
    <div class="align-content-center">
        <div class="row">
            <div class="col-md-6">
                <h1 style="font-size:24px"><a asp-controller="Home" asp-action="index">الرئيسية</a> / الأصناف</h1>
            </div>
            <hr />
        </div>

        <h2 style="font-size:20px;font-weight:bold">حذف الصنف</h2>

        @* <form action="" method="post"> *@

        @* Method (2) start *@
        <form asp-action="DeleteItem" method="post">
            <input asp-for="Id" hidden />
            @* Method (2) end *@

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Name">الصنف</label>
                <input type="text" asp-for="Name" class="form-control" name="Name" />
                <span asp-validation-for="Name" class="text-danger mt-2"></span> @* show error bellow the input field *@
            </div>

            <div class="mb-3">
                <label asp-for="Price">سعر الصنف</label>
                <input type="text" asp-for="Price" class="form-control" name="Price" />
                <span asp-validation-for="Price" class="text-danger mt-2"></span> @* show error bellow the input field *@
            </div>

            <button type="submit" class="btn btn-danger" style="width : 150px"><i class="bi bi-save"></i>&nbsp;حذف</button>
            <a asp-controller="Items" asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-bar-right"></i>&nbsp;رجـوع</a>
        </form>


    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}