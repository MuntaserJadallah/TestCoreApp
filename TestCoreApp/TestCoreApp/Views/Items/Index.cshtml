@{
    ViewData["Title"] = "الأصناف | الرئيسية";
}


@model IEnumerable<Item>

    <div class="container-fluid mt-3">
        <div class="align-content-center">
            <div class="row">
            <div class="col-md-6">
                <h1 style="font-size:24px"><a asp-controller="Home" asp-action="index">الرئيسية</a> / الأصناف</h1>
            </div>

            <div class="col-md-6 text-end">
                <a asp-controller="Items" asp-action="New" class="btn btn-primary btn-sm">
                    <i class="bi bi-file-plus"></i>&nbsp;إضافة صنف
                </a>
            </div>
           <hr />
                <div class="col-md-12">
                <h2 style="font-size:20px;font-weight:bold">قائمة الأصناف</h2>
                <table class="table table-striped table" style="width:100%">
                    <thead>
                        <tr>
                            <th class="bg-dark text-white">رقم الصنف</th>
                            <th class="bg-dark text-white">إسم الصنف</th>
                            <th class="bg-dark text-white">سعر الصنف</th>
                            <th class="bg-dark text-white">تاريخ الإنشـاء</th>
                            <th class="bg-dark text-white">التحكم</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td>@item.Price</td>
                                <td>@item.CreatedDate</td>
                                <td>
                                    <a asp-controller="Items" asp-action="Edit" asp-route-Id="@item.Id" class="btn btn-primary btn-sm">
                                        <i class="bi bi-pencil-square"></i>&nbsp;
                                    </a>
                                    <a asp-controller="Items" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger btn-sm">
                                        <i class="bi bi-trash3"></i>&nbsp;
                                    </a>
                                </td>
                            </tr>
                        }

                    </tbody>

                </table>
                </div>
            </div>
        </div>
    </div>



