<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TestCoreApp</title>
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" /> *@
    <link rel="stylesheet" href="~/css/bootstrap.rtl.css" />
    <link rel="stylesheet" href="~/css//bootstrap-icons.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TestCoreApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
</head>
<body>

    <header>

        <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
            <div class="container-fluid">
                <i class="bi bi-bag-check" style="color:white;font-size :20px"></i>&nbsp;
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">إدارة نقاط البيع</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link active" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-check"></i>&nbsp;الرئيسية
                            </a>
                            <span class="visually-hidden">(current)</span>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Category" asp-action="Index">
                                <i class="bi bi-tag"></i>&nbsp;الفئات
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Items" asp-action="Index">
                                <i class="bi bi-bookmarks"></i>&nbsp;الأصناف
                            </a>
                        </li>

                    </ul>

                    <div class="d-flex">
                        <a class="btn btn-danger" asp-controller="Home" asp-action="Index">
                            <i class="bi bi-power"></i>&nbsp;خــروج
                        </a>
                    </div>

                </div>
            </div>
        </nav>

    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - إدارة نقاط البيع - <a asp-area="" asp-controller="Home" asp-action="Privacy">سياسية الخصوصية</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
